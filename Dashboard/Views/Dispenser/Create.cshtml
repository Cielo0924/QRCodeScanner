@model Dashboard.Models.Dispenser

@{
    ViewData["Title"] = "Create Dispenser";
}

<h2 class="mb-4">Create Dispenser</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="DispenserID" class="form-label"></label>
        <input asp-for="DispenserID" class="form-control" />
        <span asp-validation-for="DispenserID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Location" class="form-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="UnitID" class="form-label">Unit</label>
        <select asp-for="UnitID" asp-items="ViewBag.UnitList" class="form-control">
            <option value="">-- Select Unit --</option>
        </select>
        <span asp-validation-for="UnitID" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IsActive" value="true" />

    <div class="form-group mb-3">
        <label class="form-label">Date Added</label>
        <input class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Submit Dispenser</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

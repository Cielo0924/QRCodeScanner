@model Dashboard.Models.Dispenser

<div class="modal-header">
    <h5 class="modal-title">QR Code for @Model.DispenserID</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body text-center">
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Unit:</strong> @Model.UnitID</p>

    @if (!string.IsNullOrEmpty(Model.QRCodeURL))
    {
        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Model.QRCodeURL"
             alt="QR Code" class="img-fluid" />
        <p class="mt-3"><code>@Model.QRCodeURL</code></p>
    }
    else
    {
        <p class="text-danger">QR code not available.</p>
    }
</div>

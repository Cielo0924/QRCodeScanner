@model List<Dashboard.Models.DispenserLog>
@{
    ViewBag.Title = "Dispenser Log History";
    var dispenser = ViewBag.Dispenser as Dashboard.Models.Dispenser;
}

<h2>Log History for Dispenser: @dispenser.DispenserID (@dispenser.Location)</h2>

@if (Model.Count == 0)
{
    <p>No logs found for this dispenser.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date & Time</th>
                <th>Person In Charge</th>
                <th>Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.DateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@log.StaffName</td>
                    <td>@log.Remarks</td>
                </tr>
            }
        </tbody>
    </table>
}